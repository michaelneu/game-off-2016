<h1>Landing Page</h1>

<%= if @user do %>
  <h2>Welcome <%= @user.name %>!</h2>
<% end %>

<%= if @user do %>
  <p><a href="<%= page_path(@conn, :game) %>">Play Game</a></p>
  <p><a href="<%= auth_path(@conn, :logout) %>">Logout</a></p>
<%= else %>
  <p><a href="<%= auth_path(@conn, :request, "github") %>">Login With GitHub to Play</a></p>
<% end %>
